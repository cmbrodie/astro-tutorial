.hero {
  background: linear-gradient(
    105deg,
    hsla(0, 0%, 97%, 0.5) 10%,
      var(--astro-purple-med) 25%,
      hsla(0, 0%, 97%, 0.5) 40%,

      hsla(0, 0%, 97%, 0.5) 60%,
      var(--astro-purple-med) 75%,
