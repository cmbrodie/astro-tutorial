    } */
    
    .text-container {
      margin: auto;
      max-width: 28rem;
      text-align: center;
    }
    .header {
      color: var(--astro-purple-dark);
      text-align: center;
    margin: 0.5rem;
    font-size: 2.25rem;
    font-family: "Karla", sans-serif;
    font-weight: 700;
    letter-spacing: 0.125rem;
    }
    .text {
      margin-top: 1.5rem; 
      font-size: 1.125rem; 
      line-height: 2; 
      color: var(--astro-purple-dark); 
    }
    .button-container {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1.5rem;
      margin-top: 2.5rem;
    }
    .button {
      padding: 0.625rem;
      padding-left: 0.875rem;
      padding-right: 0.875rem;
      font-size: 0.875rem;
      font-weight: 600;
      background: linear-gradient(
        to top right, var(--astro-purple-dark) 20%, var(--astro-purple-hover) 90%
        );
      color: var(--astro-purple-light); 
      border-radius: 0.375rem;
      text-decoration: none;
    }
    .button:hover, .button:active {
        background: linear-gradient(
        to bottom right, var(--astro-purple-dark) 20%, var(--astro-purple-hover) 90%
        );
    }
    .link {
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--astro-purple-dark);
      text-decoration: none;
      
    }
    .link:hover {
        color: var(--astro-purple);
        border-radius: .375rem;
        box-shadow: 1px 1px 1px var(--astro-purple-med);
    }
  </style>